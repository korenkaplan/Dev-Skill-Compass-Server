{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "poetry install --no-root"
  },
  "deploy": {
    "runtime": "UNSPECIFIED",
    "numReplicas": 1,
    "startCommand": "gunicorn django_server.wsgi",
    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}